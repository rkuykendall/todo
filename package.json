{
  "name": "todo",
  "private": true,
  "scripts": {
    "format": "npm run format --workspaces",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "check": "npm run format && npm run lint && npm run build",
    "lint:fix": "npm run lint:fix --workspaces",
    "prepare": "husky",
    "clear-draws": "curl -X DELETE http://localhost:4000/ticket_draw"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3"
  },
  "packageManager": "npm@9.0.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.{json,md,yml,css,html}": [
      "npm run format"
    ]
  }
}
